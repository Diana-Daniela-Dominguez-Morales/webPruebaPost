@model Tuple<webPruebaPost.Models.OrderHedModel, webPruebaPost.Models.OrderDtlModel>

@{
    ViewData["Title"] = "Home Page";
}

<h4>OrderHedModel</h4>
<hr />
<div class="row">
    <div class="container-md">
       

        <form asp-action="Index">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6" >
                <div class="form-group">
                    <label asp-for="Item1.Id" class="control-label"></label>
                    <input asp-for="Item1.Id" class="form-control" />
                    <span asp-validation-for="Item1.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Name" class="control-label"></label>
                    <input asp-for="Item1.Name" class="form-control" />
                    <span asp-validation-for="Item1.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Address" class="control-label"></label>
                    <input asp-for="Item1.Address" class="form-control" />
                    <span asp-validation-for="Item1.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.City" class="control-label"></label>
                    <input asp-for="Item1.City" class="form-control" />
                    <span asp-validation-for="Item1.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Region" class="control-label"></label>
                    <input asp-for="Item1.Region" class="form-control" />
                    <span asp-validation-for="Item1.Region" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.PostalCode" class="control-label"></label>
                    <input asp-for="Item1.PostalCode" class="form-control" />
                    <span asp-validation-for="Item1.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Country" class="control-label"></label>
                    <input asp-for="Item1.Country" class="form-control" />
                    <span asp-validation-for="Item1.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Phone" class="control-label"></label>
                    <input asp-for="Item1.Phone" class="form-control" />
                    <span asp-validation-for="Item1.Phone" class="text-danger"></span>
                </div>

            </div>

            <div class="col-md-6">
                <h4>Detalles de Orden</h4>
                <div id="orderDetails">

                    <div class="order-detail">
                        <div class="form-group">
                            <label asp-for="Item2.Codigo" class="control-label"></label>
                            <input asp-for="Item2.Codigo" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.Cantidad" class="control-label"></label>
                            <input asp-for="Item2.Cantidad" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.Description" class="control-label"></label>
                            <input asp-for="Item2.Description" class="form-control" />
                        </div>
                        <button type="button" class="btn btn-danger remove-detail">Eliminar</button>
                    </div>

                </div>
                <button type="button" id="addDetail" class="btn btn-primary">Agregar Producto</button>
            </div>
            <hr />
           

            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#addDetail").click(function () {
                var index = $(".order-detail").length;
                var html = '<div class="order-detail">' +
                    '<div class="form-group">' +
                    '<label asp-for="Item2[' + index + '].Codigo" class="control-label">Partnum</label>' +
                    '<input asp-for="Item2[' + index + '].Codigo" class="form-control" />' +
                    '</div>' +
                    '<div class="form-group">' +
                    '<label asp-for="Item2[' + index + '].Cantidad" class="control-label">Qty</label>' +
                    '<input asp-for="Item2[' + index + '].Cantidad" class="form-control" />' +
                    '</div>' +
                    '<div class="form-group">' +
                    '<label asp-for="Item2[' + index + '].Description" class="control-label">References</label>' +
                    '<input asp-for="Item2[' + index + '].Description" class="form-control" />' +
                    '</div>' +
                    '<button type="button" class="btn btn-danger remove-detail">Eliminar</button>' +
                    '</div>';
                $("#orderDetails").append(html);
            });

            $(document).on("click", ".remove-detail", function () {
                $(this).closest(".order-detail").remove();
            });
        });
    </script>
}